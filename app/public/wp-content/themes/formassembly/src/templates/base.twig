<body class="{{ body_class }}">
<header class="header">
    {% block header %}
        <div class="container">            
            <a class="logo" href="{{ site.url }}" rel="home" title="{{ site.name }}"><img src="../assets/header-logo.png"></a>
        </div>
    {% endblock %}
</header>

<section id="content" role="main" class="content-wrapper">
    {% if title %}<h1>{{ title }}</h1>{% endif %}
    <div class="wrapper {{ sidebar_class }}">
        {% block content %}
            Sorry, no content
        {% endblock %}
    </div>
    {% if sidebar %}
        <aside class="layout-sidebar">
            {{ sidebar }}
        </aside>
    {% endif %}
</section>

{% block footer %}
    <footer id="footer" class="container">
        {% include 'footer.twig' %}
    </footer>
    {{ function('wp_footer') }}
{% endblock %}
